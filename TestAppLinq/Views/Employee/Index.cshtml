@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>@Html.ActionLink("Create New Employee","CreateEmployee")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfJoin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Married)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfJoin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Married)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>            
        </tr>
    }

</table>